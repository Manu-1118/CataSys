extends ../layout/index

block contenido
    div(class="py-5")
        h1(class="text-3xl my-5 font-extrabold text-center") Centro 
            span(class="font-normal") Oftalmológico
        h2(class="text-center text-2xl font-extrabold")= pagina

        if errores
            div(class="max-w-md mx-auto my-5")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="mt-5 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow rounded")
                form(action="/auth/registro" method="POST" class="space-y-6")
                    //- AÑADIR EL INPUT HIDDEN DE CSRF
                    div
                        label(class="block text-sm uppercase text-slate-600 mb-2 font-bold" for="nombre") Tu Nombre
                        input(class="w-full px-3 py-2 border border-slate-300 rounded-md placeholder-slate-400" placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div
                        label(class="block text-sm uppercase text-slate-600 mb-2 font-bold" for="usuario") Tu Nombre de Usuario
                        input(class="w-full px-3 py-2 border border-slate-300 rounded-md placeholder-slate-400" placeholder="Tu nombre de usuario" type="text" name="usuario" value= usuario ? usuario.usuario : '')
                    div
                        label(class="block text-sm uppercase text-slate-600 mb-2 font-bold" for="correo") Correo de Registro
                        input(class="w-full px-3 py-2 border border-slate-300 rounded-md placeholder-slate-400" placeholder="Tu Correo" type="email" name="correo" value= usuario ? usuario.correo : '')
                    div
                        label(class="block text-sm uppercase text-slate-600 mb-2 font-bold" for="clave") Contraseña
                        input(class="w-full px-3 py-2 border border-slate-300 rounded-md placeholder-slate-400" placeholder="Tu contraseña" type="password" name="clave")

                    div
                        label(class="block text-sm uppercase text-slate-600 mb-2 font-bold" for="repetir_clave") Confirmar contraseña
                        input(class="w-full px-3 py-2 border border-slate-300 rounded-md placeholder-slate-400" placeholder="Repite tu contraseña" type="password" name="repetir_clave")
                    
                    div(class="flex items-center justify-between px-1")
                        a(href="/auth/login" class="text-slate-400 text-xs") ¿Ya tienes cuenta? 
                            span(class="text-indigo-800") Inicia Sesión
                        a(href="/auth/recuperacion" class="text-slate-400 text-xs") Olvidé mi contraseña
                    
                    input(class="font-boton w-full bg-blue-400 hover:bg-blue-500 text-white font-bold py-3 cursor-pointer rounded-sm" type="submit" value="Crear Cuenta")